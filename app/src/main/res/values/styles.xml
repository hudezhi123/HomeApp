<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- grid line syle -->
    <style name="grid_bg_style">
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/grid_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- grid img style -->
    <style name="grid_img_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <!-- grid img style -->
    <style name="grid_text_style">

        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>


    <!-- radiobutton style -->
    <style name="rb_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@drawable/rb_text_selector</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="animationofactivity" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/enterandentrance</item>
    </style>

    <style name="enterandentrance">
        <item name="android:activityOpenEnterAnimation">@anim/activity_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_exit_anim</item>
    </style>

    <style name="linear_style">
        <item name="android:background">@drawable/linear_bg_shape</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TextTag">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">@drawable/text_tag_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="edit_style">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="PrivateLinear">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/private_linear_shape</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PrivateLinearOther">
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/private_linear_shape</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="PrivateTextTag">
        <item name="android:background">@drawable/private_text_tag_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="PrivateEdit">
        <item name="android:background">@drawable/private_linear_shape</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingLeft">1.5dp</item>
    </style>

    <style name="radiogroupTabChildMain">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_seletor</item>
    </style>

    <style name="mine_fragment_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/long_item_press_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">20dp</item>

    </style>
</resources>
