<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="com.hudezhi.freedom.homeapp.video.MainVideoActivity">

    <EditText
        android:id="@+id/edit_server_configure"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.7"
        android:background="@drawable/bg_edittext"
        android:hint="输入Ip地址"
        android:paddingLeft="5dp"
        android:singleLine="true">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_server_configure"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/btn_config"
        android:onClick="onConfigure"
        android:paddingLeft="10dp"
        android:text="配置"
        android:textColor="@color/colorTextWhite" />
</LinearLayout>
