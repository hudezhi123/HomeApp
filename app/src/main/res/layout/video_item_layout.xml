<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/localvideo_item_bg"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/thumbnail"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/img_video_pre_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTextBlack" />

        <TextView
            android:id="@+id/text_video_time_seen_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="看到00:00:05"
            android:textColor="@color/colorTextWhite"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/thumbnail">

        <TextView
            android:id="@+id/text_name_video_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="android内存优化教程.mp4"
            android:textColor="@color/colorTextBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_time_length_video_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="00:00:30"
            android:textColor="@color/colorBaseGray" />

        <TextView
            android:id="@+id/text_capcity_video_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="5M"
            android:textColor="@color/colorBaseGray" />
    </RelativeLayout>
</RelativeLayout>